<% @page_heading = _("%s Redirect", controller.action_name.capitalize) %>
<% content_for(:tasks) do %>
  <%= task_overview %>
<% end %>

<%= form_tag :action=>"edit", :id => @redirect.id do %>
  <%= error_messages_for 'redirect' %>
  <div>
    <h3><label for="redirect_from_path"><%= _("From")%></label> </h3>
    <p class='input_text_title'>
      <%= this_blog.base_url %>/<%= text_field :redirect, :from_path, :class => 'medium'  %>
	  <span clsas='help'><%= _("Leave empty to shorten a link") %></span>
    </p>
  </div>
  <div>
    <h3><label for="redirect_to_path" class="content block"><%= _("To") %></label></h3>
    <p class='input_text_title'>
      <%= text_field :redirect, :to_path, :class => 'large' %>
    </p>
  </div>
  <%= cancel_or_save %>
<% end %>
