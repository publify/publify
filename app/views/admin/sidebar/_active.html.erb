<div id="active_<%= active.html_id %>" class='alert alert-info'>
  <h3 class='light'><%= _(active.display_name) %></h3>
  <div class='widget-content'>
    <p><%= _(active.description) %></p>
    <div>
      <%- active.class.fields.each do |row| %>
        <%= row.line_html(active) %>
      <%- end %>
    </div>
  </div>
</div>
