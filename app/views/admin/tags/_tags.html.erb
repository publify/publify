<table cellspacing="1" cellpadding="0">
<tr class="first">
  <th><%= _("Display Name") %></th>
  <th><%= _("Name") %></th>
  <th><%= _("Articles") %></th>
  <th><%= _("Edit")%></th>
  <th><%= _("Delete")%></th>
</tr>
<%= render_void_table(@tags.size, 5)  %>
<% for tag in @tags %>
<tr <%= alternate_class %>>
  <td> <%= link_to tag.display_name, tag %></td>
  <td><%= tag.name %></td>
  <td><%= tag.article_counter %></td>
  <td class="operation"><%= link_to_edit tag %></td>
  <td class="operation"><%= link_to_destroy tag %></td>    
</tr>  
<% end %>
</table>
