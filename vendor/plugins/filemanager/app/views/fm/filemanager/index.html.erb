<html>
<head>
<title>Filemanager</title>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

<%= javascript_include_tag 'prototype', 'prototype_ext', 'scriptaculous', 'effects', 'builder', 'lightbox', 'prototype_ext', "/filemanager/javascripts/translate", "/filemanager/javascripts/filemanager", :cache => true %>

<script language=javascript type=text/javascript>
var currentFile = null;
var FMLang = {};
function showControl(file) {
  setCssClass($('imageControl'), "hidelayer");
	setCssClass($('viewControl'), "showlayer");
	currentFile = file;
	if(file.length > 4) {
	    var suffix = file.substring(file.length -3).toLowerCase();
	    if (suffix == 'jpg' || suffix == 'gif' || suffix == 'png') {
	    	setCssClass($('imageControl'), "showlayer");
	    }
	}
}
</script>

<%= stylesheet_link_tag("/filemanager/stylesheets/general", "/filemanager/stylesheets/filelist", "/filemanager/stylesheets/lightbox.css") %>

<style type="text/css">
body, select, textarea, div {
	margin:0;
	padding:0;
	font: 11px/17px 'Lucida Grande', 'Lucida Sans', 'Arial', sans-serif;
}

input{
	margin:0;
	padding:0;
	font-family: "Arial";
	font-size:9pt;
	line-height: 1.5em;
	vertical-align:middle;
}


img {
    border:0px;
    vertical-align:middle;
}
form {
	margin:0px;
	padding:0px;
}
a {
color:#000000;
text-decoration: none;
}
a:hover {
color:#FF0000
}

.hidelayer {
	display:none;
	visibility:hidden;
}
.showlayer {
	display:block;
	visibility:visible;
}
.hideMenu {
position:absolute;
list-style:none;
margin:0;
padding:0;
display:none;
border:1px   solid   #DDDDDD;
background-color:#EEEEEE;
}
.hideMenu  li{
padding:1px;
}
.hideMenu   li   a{
padding:3px;
display:block;
text-decoration:none;
cursor:default;
}
.hideMenu   li   a:link, a:visited{
color:black;
}
.hideMenu   li   a:hover{
color:white;
background-color:#039;
}
</style>
</head>
